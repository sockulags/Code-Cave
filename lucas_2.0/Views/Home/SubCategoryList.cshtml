@{
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><i class="bi bi-house"></i></a></li>
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="CategoryList" asp-route-categoryName="@Model.Select(p=>p.CategoryName).FirstOrDefault()">@Model.Select(p=>p.CategoryName).FirstOrDefault()</a></li>

        <li class="breadcrumb-item active" aria-current="page">@Model.Select(p=>p.SubCategoryName).FirstOrDefault()</li>
    </ol>
</nav>

@foreach (var item in Model)
{
    <div class="content-box">
        <div class="row">
            <div class="col">
                <a asp-controller="Home" asp-action="PostView" asp-route-categoryName="@item.CategoryName" asp-route-subCategoryName="@item.SubCategoryName" asp-route-postId="@item.PostName">  <h2> @item.PostName </h2></a>
            </div>
        </div>
        <div class="row">
            <div class="col description">
                @item.PostDescription
            </div>

        </div>
        <div class="row">
            <div class="col">
                <a asp-controller="Home" asp-action="CategoryList" asp-route-categoryName="@item.CategoryName"> @item.CategoryName</a>
            </div>
            <div class="col">
                
            </div>
        </div>
    </div>
}