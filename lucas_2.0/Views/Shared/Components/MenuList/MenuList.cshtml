<div class="d-flex flex-column align-items-left sticky-top min-vh-100 border-end border-2">
               
                @foreach (var category in Model){
                <div class="dropdown">




            

            <a asp-controller="Home" asp-action="CategoryList" asp-route-categoryName="@category.CategoryName" class="d-flex align-items-center justify-content-left p-2 text-decoration-none listShow dropdown-item" id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="true">
                        @category.CategoryName
                    </a>
                    <ul class="dropdown hiddenList" aria-labelledby="dropdownUser3">
                            @foreach(var item in category.SubCategories)
                            {
                                if(category.CategoryId == item.CategoryId)
                                {
                                <li ><a asp-controller="Home" asp-action="CategoryList" asp-route-categoryName="@category.CategoryName" asp-route-subCategoryName="@item.Name" class="dropdown-item">@item.Name</a></li>
                                }
                            }
              
                    </ul>
                </div>
                 
                }
